header.header
	.header-cont
		.header-logo
			a(href="#")
				img(src="@img/img99/svg/logo.svg" alt="")
		nav.header-nav
			+menu(
				'', 
				[
				{
					href: '#',
					text: 'Конвертация'
				},
				{
					href: '#',
					text: 'Водяной знак'
