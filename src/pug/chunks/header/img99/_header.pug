				],
				{
					class: 'header-menu'
				}
			)

		.header-right
			.header-right_lang
				+btn('',[
					{
						class: 'dropdown bgHoverGray',
						arrow: '@img/img99/svg/arrow.svg',
						text: 'RU',
						arrowClass: 'arrow'
					}
				])
				ul.header-right_lang__dropdown
					li
						a(href="#") EN
			.header-right_social
				+btn('', [
					{
						'class': 'telega',
						'text': '',
						'imgL': '@img/img99/icons/telega.svg',
						'href': '#'
					}
					])
				+btn('', [
					{
						'class': 'vk',
						'text': '',
						'imgL': '@img/img99/icons/vk.svg',
						'href': '#'
					}
					])
				+btn('', [
					{
						'class': 'btnRed',
						'text': 'Помочь проекту',
						'imgL': '',
						'href': '#'
					}
					])
		+btn('menuB')

